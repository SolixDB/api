# Server Configuration
PORT=3000
NODE_ENV=production

# Rate Limiting
ENABLE_RATE_LIMIT=true

# Rate Limit Tiers (requests per minute by complexity)
RATE_LIMIT_COST_50=200
RATE_LIMIT_COST_100=100
RATE_LIMIT_COST_200=50
RATE_LIMIT_COST_500=20
RATE_LIMIT_COST_1000=10
RATE_LIMIT_EXPORT=5

# ClickHouse Configuration
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=default
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# ClickHouse Connection Pooling
CLICKHOUSE_POOL_MIN=20
CLICKHOUSE_POOL_MAX=200
CLICKHOUSE_CONNECTION_TIMEOUT=5000
CLICKHOUSE_IDLE_TIMEOUT=60000
CLICKHOUSE_QUEUE_MAX=1000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# GraphQL Configuration
GRAPHQL_MAX_COMPLEXITY=1000
GRAPHQL_MAX_DEPTH=5

# Cache Configuration
CACHE_HOT_QUERY_TTL=3600
CACHE_RECENT_DATA_TTL=300
CACHE_HISTORICAL_DATA_TTL=86400
CACHE_AGGREGATION_TTL=1800
CACHE_INVALIDATION_CHECK_INTERVAL=60000

# Export Configuration
EXPORT_DIR=/var/solixdb/exports
EXPORT_EXPIRATION_HOURS=24
EXPORT_MAX_FILE_SIZE_GB=5
EXPORT_MIN_FREE_SPACE_GB=20
EXPORT_MAX_TOTAL_SIZE_GB=100

# JWT Secret for signed URLs
JWT_SECRET=change-me-in-production
# Alternative: use SECRET env var
# SECRET=change-me-in-production

# Memory Configuration
MAX_HEAP_MB=8192
MEMORY_REJECT_THRESHOLD_PERCENT=80

# API Key Header (optional, for future auth)
